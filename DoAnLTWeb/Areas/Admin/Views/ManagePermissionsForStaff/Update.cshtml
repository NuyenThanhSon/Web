@model DoAnLTWeb.Models.Staff

@{
    ViewData["Title"] = "Update";
}

<h1>Update Staff Information</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdateForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idstaff" />

            <div class="form-group">
                <label asp-for="StaffName" class="control-label"></label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StaffAddress" class="control-label"></label>
                <input asp-for="StaffAddress" class="form-control" />
                <span asp-validation-for="StaffAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneStaff" class="control-label"></label>
                <input asp-for="PhoneStaff" class="form-control" />
                <span asp-validation-for="PhoneStaff" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CitizenIdentificationCode" class="control-label"></label>
                <input asp-for="CitizenIdentificationCode" class="form-control" />
                <span asp-validation-for="CitizenIdentificationCode" class="text-danger"></span>
            </div>

            <!-- Staff type-->
            <div class="form-group">
                <label asp-for="IdstaffType" class="control-label"></label>
                <select asp-for="IdstaffType" class="form-control" asp-items="@ViewBag.StaffTypes"></select>
                <span asp-validation-for="IdstaffType" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>


            <!--button input-->

            <button class="btn btn-primary" type="submit">Update</button>

            <button class="btn btn-primary" asp-action="Index" asp-controller="ManagePermissionsForStaff">Back</button>

        </form>

    </div>
</div>

<!-- Hình ảnh -->
<div class="form-group">
    <label asp-for="IdImages" class="control-label"></label>

    <!-- Hiển thị hình ảnh -->
    <img id="previewImage" src="" alt="Image Preview" style="max-width: 200px;" />

    <!-- Form để gửi dữ liệu ảnh lên máy chủ -->
    <form asp-action="UpdateImage" asp-controller="ManagePermissionsForStaff" method="post" enctype="multipart/form-data">
        <!-- Ô input để chọn ảnh -->
        <input type="file" name="image" id="imageInput" class="form-control" onchange="previewSelectedImage(this)" />

        <!-- Hidden input để lưu đường dẫn của ảnh -->
        <input asp-for="IdImages" type="hidden" class="form-control" />

        <!-- Hiển thị thông báo lỗi -->
        <span asp-validation-for="IdImages" class="text-danger"></span>

        <!-- Nút Submit -->
        <button type="submit" class="btn btn-primary">Update Image</button>
    </form>
</div>

<script>
    // Hàm để xem trước hình ảnh được chọn
    function previewSelectedImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#previewImage').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

