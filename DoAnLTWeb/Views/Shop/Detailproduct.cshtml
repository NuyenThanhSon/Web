            <div class="col-lg-5 col-md-12">
                <div class="product-img" id="product-img">
                    <img src="~/img/hd-1.png" alt="">
                </div>
                <div class="box">
                    <div class="product-img-list">
                        <div class="product-img-item">
                            <img src="~/img/hd-1.png" alt="">
                        </div>
                        <div class="product-img-item">
                            <img src="~/img/hd-2.png" alt="">
                        </div>
