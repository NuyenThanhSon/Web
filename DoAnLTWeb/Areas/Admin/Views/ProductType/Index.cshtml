
<h2>day la product type</h2>
@model List<DoAnLTWeb.Models.ProductType>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <!-- Tiêu đề và breadcrumb -->
        <h1>
            Quản lý sản phẩm
        </h1>
        <ol class="breadcrumb">
            <li><a asp-action="Create" asp-controller="ProductType"><i class="fa fa-dashboard"></i>Create</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-body">
                <table class="table">
                    <!-- Header của bảng -->
                    <thead>
                        <!-- Các cột -->
                        <tr>
                            <th scope="col">IdproductType</th>
                            <th scope="col">ProductTypeName</th>

                        </tr>
                    </thead>
                    <!-- Dữ liệu sản phẩm -->
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdproductType</td>
                                <td>@item.ProductTypeName</td>

                                <td>




                                    <a asp-action="Update" asp-area="admin" asp-controller="ProductType"
                                       asp-route-id="@item.IdproductType" class="btn btn-sm btn-primary ">
                                        <i class="fa fa-edit"> </i>Edit
                                    </a>


                                    <a href="#" class="btn btn-sm btn-danger"
                                       onclick="confirmDelete('@item.IdproductType')">
                                        <i class="fa fa-trash"></i> Delete
                                    </a>

                                    <form id="deleteForm_@item.IdproductType"
                                          action="/admin/ProductType/Delete" method="post" style="display: none;">
                                        <input type="hidden" name="id" value="@item.IdproductType" />
                                    </form>



                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Phân trang -->

        </div>
    </section>
</div>






<script>
    function confirmDelete(id) {
        if (confirm('Are you sure you want to delete this product type?')) {
            document.getElementById('deleteForm_' + id).submit();
        }
    }
</script>