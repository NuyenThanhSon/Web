@model DoAnLTWeb.Models.User
@{
    ViewData["Title"] = "Đăng Nhập";
    <link rel="stylesheet" href="~/login/style.css">

}

<div class="container vh-100 vh-100">
<div class="row align-items-center justify-content-center h-100 px-4 px-sm-0">
    <div class="col col-sm-6 col-lg-7 col-xl-6">
        <a href="#" class="d-flex justify-content-center mb-4">
            <img src="~/login/img/hyper (3).png" alt="Responsive image" class="img-fluid">
        </a>
        <div class="text-center mb-5">
            <h3 class="font-weight-bold fs-5">Đăng Nhập</h3>
            <p class="text-secondary">Mời bạn vui lòng đăng nhập</p>
        </div>

        <button class="btn bg-danger text-white btn-lg btn-block mb-3">
            Đăng nhập với Google
            <i class='bx bxl-google me-1 fs-6'></i>
        </button>
        <button class="btn bg-primary text-white btn-lg btn-block">
            Đăng nhập với Facebook
            <i class='bx bxl-facebook me-1 fs-6'></i>
        </button>

        <div class="position-relative">
            <hr class="text-secondary text">
            <div class="text-content-center">Hoặc</div>
        </div>


        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="Login" asp-controller="User" method="POST">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class='bx bx-user'></i>
                    </span>
                </div>
                <input type="text" asp-for="Username" class="form-control form-control-lg fs-6" placeholder="Nhập tên đăng nhập" autofocus required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class='bx bx-lock-alt'></i>
                    </span>
                </div>
                <input type="password" asp-for="Password" id="password" class="form-control form-control-lg fs-6" placeholder="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

          

            <button type="submit" class="btn btn-dark btn-lg btn-block mb-3 fs-5">Đăng Nhập</button>
        </form>
            <div class="input-group mb-3 d-flex justify-content-between">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="formCheck">
                    <label for="formCheck" class="form-check-label text-secondary"><small>Ghi nhớ</small></label>
                </div>
                <div>
                    <small><a asp-controller="User" asp-action="ForgotPassword">Quên mật khẩu?</a></small> <!-- Chỉnh sửa href -->
                </div>
            </div>
        <div class="text-center">
                <small>Chưa có tài khoản? <a asp-controller="User" asp-action="Register"><span>Đăng Ký</span></a></small>
        </div>
    </div>
</div>

</div>