@model DoAnLTWeb.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    var supplier = ViewBag.Supplier as DoAnLTWeb.Models.Supplier;
    var product = ViewBag.Product as DoAnLTWeb.Models.Product;

