<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HyperZ Shop</title>
    <link rel="shortcut icon" href="~/img/iconZ.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.3/components/blogs/blog-2/assets/css/blog-2.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/account.css">
</head>
<body>
    <!--  Header  -->
    <header class="">
        <!-- header mobile -->
        <div class="mob-menu bg-secondary">
            <a href="#" class="mob-logo"><img src="~/img/hyper (3).png" alt=""></a>
            <span class="mob-menu-toggle" id="mob-menu-toggle">
                <i class='bx bx-menu'></i>
            </span>
        </div>
        <!-- end header mobile -->
        <!-- main header -->
        <div class="header-wrapper">


            <div class="bg-white">
                <div class="mid-header container" id="header-wrapper">
                    <span class="mob-menu-toggle mob-menu-close" id="mob-menu-close">
                        <i class='bx bx-x'></i>
                    </span>
                    <a href="#" class="logo"><img src="~/img/hyper (3).png" alt=""></a>
                    <ul class="main-menu">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li><a asp-area="" asp-controller="About" asp-action="Index">Giới thiệu</a></li>
                        <li><a asp-area="" asp-controller="Contact" asp-action="Index">Liên hệ</a></li>

                    </ul>

                    <ul class="user-menu">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Nếu đã đăng nhập, hiển thị tên người dùng -->
                            <li class="dropdown-action" onmouseover="menuToggle(true);" onmouseout="menuToggle(false);">
                                <a href="#" style="font-size:16px !important;">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu-list">
                                    <li><a asp-controller="User" asp-action="EditUser">Thông tin tài khoản</a></li>
                                    <li><a href="useraccount.html">Đơn mua</a></li>
                                    <li><a  asp-area="" asp-controller="User" asp-action="Logout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-area="" asp-controller="User" asp-action="Login">
                                    <i class="bx bx-user"></i>
                                </a>
                            </li>
                        }
                        <li>
                            <a href="#">
                                <i class='bx bx-search' data-bs-toggle="modal" data-bs-target="#myModal"></i>
                            </a>
                            <!-- The Modal -->
                            <div class="modal fade" id="myModal">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">

                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            <div class="form form-search">
                                                <i class="bx bx-search"></i>
                                                <input type="text" class="form-control form-input form-sear" placeholder="Tìm kiếm..." style="width: 450px !important;">
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                            <!-- End modal -->
                        </li>
                       
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Cart" asp-action="Cart"><i class='bx bx-shopping-bag'></i><span>0</span></a></li>
                        }
                        else {

                            <li><a href="#"><i class='bx bx-shopping-bag'></i></a></li>

                        }

                    </ul>
                </div>
            </div>
            <!-- end mid header -->
        </div>
        <!-- end main header -->
    </header>

    <!-- End Header  -->


    
     @RenderBody()
  


    <!-- Footer -->
    <footer class="footer-container">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <h3 class="footer-head">Thông tin</h3>
                    <ul class="menu">
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Liên hệ</a></li>
                        <li><a href="#">Hợp tác</a></li>
                        <li><a href="#">Chính sách</a></li>
                        <li><a href="#">Điều khoản dịch vụ</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h3 class="footer-head">Chính sách</h3>
                    <ul class="menu">
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Chính sách hợp tác</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">Chính sách hoàn tiền</a></li>
                        <li><a href="#">Chính sách sản phẩm</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h3 class="footer-head">Hỗ trợ</h3>
                    <ul class="menu">
                        <li><a href="#">Chăm sóc khách hàng</a></li>
                        <li><a href="#">Liên hệ</a></li>
                        <li><a href="#">Hỏi đáp</a></li>
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Help center</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="contact">
                        <div class="contact-header">
                            <img src="./img/hyper (3).png" alt="">
                        </div>
                        <ul class="contact-social">
                            <li><a href="#"><i class='bx bxl-facebook-circle'></i></a></li>
                            <li><a href="#"><i class='bx bxl-instagram'></i></a></li>
                            <li><a href="#"><i class='bx bxl-twitter'></i></a></li>
                            <li><a href="#"><i class='bx bxl-youtube'></i></a></li>
                        </ul>
                    </div>
                    <div class="subscribe">
                        <input class="form-control" id="email" name="email" type="text" placeholder="Nhập email của bạn">
                        <button aria-label="subcribe">Đặt mua</button>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/main.js"></script>
    <script src="~/js/product.js"></script>
    <script src="~/login/main.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Script", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>