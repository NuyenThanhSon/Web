
    @{
        ViewData["Title"] = "Liên hệ";
    }

    <section>
            <div class="breadcum-container container-fluid">
                <div class="box container">
                    <div class="breadcum">
                        <a href="/trang-chu">Trang chủ</a>
                        <span><i class='bx bxs-chevrons-right' ></i></span>
                        <a href="/lien-he">Liên hệ</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="container">
            <div class="section-about row justify-content-center align-items-center">
                <div class="col-7 mb-5">
                    <h2>Liên hệ chúng tôi</span></h2>
                </div>
            </div>
        </section>

        <section class="container">
            <div class="row ml-5 justify-content-center align-items-center">
                <div class="col-md-6 col-sm-12 col-xs-12">
				    <div class="header-page-contact">
					    <h2>Liên hệ</h2>
				    </div>
				    <div class="box-info-contact">
					    <ul class="list-info">
						    <li>
							    <p>Địa chỉ chúng tôi</p>
							    <p><strong>Xa lộ hà nội, quận 9 thành phố Thủ Đức, TP.HCM</strong></p>
						    </li>
						    <li>
							    <p>Email chúng tôi</p>
							    <p><strong>hyperZShop741@gmail.com</strong></p>
						    </li>
						    <li>
							    <p>Điện thoại</p>
							    <p><strong>1800 1160</strong></p>
						    </li>
						    <li>
							    <p>Thời gian làm việc</p>
							    <p><strong>Thứ 2 đến Thứ 6 từ 8h30 đến 17h30</strong></p>
						    </li>
					    </ul>
				    </div>
				
			    </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="box-send-contact">
                    <h2>Gửi thắc mắc cho chúng tôi</h2>
                    <form class="contact-form" method="post" action="@Url.Action("SendEmail", "Contact")">
                        <div class="row">
                            <div class="col-sm-12 col-xs-12">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="name" placeholder="Tên của bạn">
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="input-group">
                                    <input type="email" class="form-control"  name="email" placeholder="Email của bạn">
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="input-group">
                                    <input class="form-control" name="phoneNumber" placeholder="Số điện thoại của bạn">
                                </div>
                            </div>
                            <div class="col-sm-12 col-xs-12 mt-3">
                                <div class="input-group">
                                    <textarea name="message" placeholder="Nội dung"></textarea>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <button type="submit" class="button-dark">Gửi cho chúng tôi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
                </div>
        </section>
    
        <section class="container mt-5">
