@model DoAnLTWeb.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="ProductName" class="form-label">Product Name:</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductDescription" class="form-label">Description:</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdproductType" class="form-label">Product Type:</label>
        <select asp-for="IdproductType" class="form-control">
            <option value="">-- Select Product Type --</option>
            @foreach (var productType in ViewBag.ProductTypes)
            {
                <option value="@productType.Id">@productType.Name</option>
            }
        </select>
        <span asp-validation-for="IdproductType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Idsupplier" class="form-label">Supplier:</label>
        <select asp-for="Idsupplier" class="form-control">
            <option value="">-- Select Supplier --</option>
            @foreach (var supplier in ViewBag.Suppliers)
            {
                <option value="@supplier.Id">@supplier.Name</option>
            }
        </select>
        <span asp-validation-for="Idsupplier" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="form-label">Price:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sale" class="form-label">Sale:</label>
        <input asp-for="Sale" class="form-control" />
        <span asp-validation-for="Sale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="form-label">Status:</label>
        <select asp-for="Status" class="form-control">
            <option value="">-- Select Status --</option>
            <option value="1">Active</option>
            <option value="0">Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
